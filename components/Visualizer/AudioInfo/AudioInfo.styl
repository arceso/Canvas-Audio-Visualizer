.c-audio-info
  position absolute
  bottom 15px
  width 100%
  padding 15px
  text-align right

  &__title
  &__author
  &__controls
  &__time-text
    color #f1f1f1

  &__title
  &__author
    font-size: 25px
    margin 0
  
  &__title
    margin-bottom 5px

  &__author  
    margin-bottom 15px

  &__controls
    position absolute
    left 15px
    top calc(50% - 10px)
    transform translateY(-50%)
    user-select none

  &__controls > i
    font-size 25px
    width 25px
    &:not(:first-child)
      margin-left 10px

  &__time-line
    position relative
    height 4px
    border-radius 2px
    background-color #ff0250

  &__time-line-current
    width 15px
    height 15px
    background-color white
    border-radius 7.5px
    position absolute
    top 50%
    transform translateY(-50%)
    left 0
    transition left 1s linear

  &__time-text > div 
    display inline
  
  &__time-text-separator
    margin 0 15px

  &__time-text-monospace
    display inline-block
    width 9.5px
    text-align center
    &:nth-child(2)
      width 5px
